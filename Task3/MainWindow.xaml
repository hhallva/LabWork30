<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>
        <TextBox x:Name="TextBox" Height="100"/>
        <Label Content="Размер текста:"/>
        <RadioButton Content = "10" Checked="FontSizeRadioButton_Checked" GroupName="SizeGroup"/>
        <RadioButton Content = "20" Checked="FontSizeRadioButton_Checked" GroupName="SizeGroup"/>
        <RadioButton Content = "30" Checked="FontSizeRadioButton_Checked" GroupName="SizeGroup"/>
        <Label Content="Выравнивание:"/>
        <RadioButton  x:Name="LeftAligmentRadioButton"  Content="По левому краю" Checked="LeftAligmentRadioButton_Checked"  GroupName="AligmentGroup"/>
        <RadioButton x:Name="CenterAligmentRadioButton" Content = "По центру" Checked="CenterAligmentRadioButton_Checked" GroupName="AligmentGroup"/>
        <RadioButton x:Name="RightAligmentRadioButton" Content = "По правому краю" Checked="RightAligmentRadioButton_Checked" GroupName="AligmentGroup"/>
    </StackPanel>
</Window>
