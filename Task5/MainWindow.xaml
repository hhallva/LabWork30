<Window x:Class="Task5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DockPanel Background="White">
            <CheckBox x:Name="RedCheckBox" Click="RedCheckBox_Click"/>
            <Label Content="Red" Width="50"/>
            <Slider x:Name ="RedSlider"  Value="0" Maximum="255" ValueChanged="Slider_ValueChanged" IsEnabled="False"/>
        </DockPanel>

        <DockPanel Background="White">
            <CheckBox x:Name="GreenCheckBox" Click="GreenCheckBox_Click"/>
            <Label Content="Green" Width="50"/>
            <Slider x:Name ="GreenSlider" Value="0" Maximum="255" ValueChanged="Slider_ValueChanged" IsEnabled="False"/>
        </DockPanel>

        <DockPanel Background="White">
            <CheckBox x:Name="BlueCheckBox" Click="BlueCheckBox_Click"/>
            <Label Content="Blue" Width="50"/>
            <Slider x:Name ="BlueSlider" Value="0" Maximum="255" ValueChanged="Slider_ValueChanged" IsEnabled="False"/>
        </DockPanel>
    </StackPanel>
</Window>
